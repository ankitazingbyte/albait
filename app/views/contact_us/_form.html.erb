<div id="wrapper">
    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row bg-title">
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <h4 class="page-title">Update Contact Details</h4>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-info">
                      <%= form_for @contact_u do |form| %>
                        <div class="form-group row">
                            <label for="example-text-input" class="col-2 col-form-label">Address</label>
                            <div class="col-10">
                                <%= form.text_field :address, id: :contact_u_address,class: "form-control" %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="example-search-input" class="col-2 col-form-label">Contact Number</label>
                            <div class="col-10">
                                <%= form.text_field :contact_num, id: :contact_u_contact_num %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="example-email-input" class="col-2 col-form-label">Email</label>
                            <div class="col-10">
                                <%= form.text_field :email, id: :contact_u_email %>
                                <div class="form-actions m-t-40">
                                    <%= form.submit "Save",class: "btn btn-success"%><i class="fa fa-check"></i>
                                    <%= link_to "Cancel", products_path, class: "btn btn-default" %>
                                </div>
                            </div>
                        </div>
                      <% end %>
                    </div>
                </div>
            </div>
            <!--row -->
        </div>
    </div>
    <!-- /#page-wrapper -->
</div>
   
